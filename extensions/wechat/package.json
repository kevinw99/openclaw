{
  "name": "@openclaw/wechat",
  "version": "2026.2.9",
  "description": "OpenClaw WeChat channel plugin via Wechaty",
  "type": "module",
  "dependencies": {
    "file-box": "^1.4.0",
    "wechaty": "^1.0.0",
    "wechaty-puppet-padlocal": "^1.0.0",
    "wechaty-puppet-wechat4u": "^1.0.0",
    "qrcode-terminal": "^0.12.0"
  },
  "devDependencies": {
    "openclaw": "workspace:*"
  },
  "openclaw": {
    "extensions": [
      "./index.ts"
    ],
    "channel": {
      "id": "wechat",
      "label": "WeChat",
      "selectionLabel": "WeChat (Personal)",
      "docsPath": "/channels/wechat",
      "docsLabel": "wechat",
      "blurb": "WeChat personal account via Wechaty puppet layer.",
      "aliases": [
        "wx"
      ],
      "order": 85,
      "quickstartAllowFrom": true
    },
    "install": {
      "npmSpec": "@openclaw/wechat",
      "localPath": "extensions/wechat",
      "defaultChoice": "npm"
    }
  }
}
